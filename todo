FrontOffice:
    app:
        database:
            base.sql:
                -table BNGRC_user
                -table BNGRC_ville
                -table BNGRC_donation
                -table BNGRC_besoin
                -table BNGRC_besoin_categorie
                -table BNGRC_distribution
                -table BNGRC_achats
                -table BNGRC_stock
                -table BNGRC_prix_unitaire
                -table BNGRC_type

    config:
        routes.php:
            -route /login pour afficher le formulaire de connexion
            -route POST /login pour traiter la connexion
            -route /dashboard pour afficher le tableau de bord après connexion réussie
            -route /insererBesoin pour insérer des besoin
            -route POST /traitementinsererBesoin pour traiter l'insertion des besoin
            -route /insererDon pour insérer des dons
            -route POST /traitementinsererDon pour traiter l'insertion des dons
            -route /villes pour afficher la liste des villes
            -route /ville/@id pour afficher les détails d'une ville
            -route /achats pour afficher la liste des achats
            -route POST /traitementinsererAchat pour traiter l'insertion des achats
            -route /insererDistribution pour insérer des distributions
            -route POST /traitementinsererDistribution pour traiter les distributions
            -route /dashboard/recap pour obtenir les statistiques au format JSON

    
    controller:
        LoginController.php:
            -function showLogin() pour auto-login 
            -function PostLogin() pour auto-login traitement de la connexion

        DashboardController.php:
            -function afficherTableauDeBord() pour afficher le tableau de bord 
            -function afficherListeVilles() pour afficher la liste des villes avec statistiques
            -function recapitulatifJSON() pour envoyer les données financières
            -function afficherVilleParId($id) pour afficher les détails d'une ville spécifique

        BesoinController.php:
            -function insererBesoin() pour insérer des besoin
            -function showinsererbesoin() pour afficher la page d'insertion des besoins

        DonController.php:
            -function insererDon() pour insérer des dons et mettre à jour le stock
            -function showinsererDon() pour afficher la page d'insertion des dons

        AchatsController.php:
            -function showAchats() pour afficher l'historique des achats
            -function insererAchat() pour traiter un achat et mettre à jour le stock

        DistributionController.php:
            -function showInsererDistribution() pour afficher le formulaire de distribution
            -function insererDistribution() pour traiter la distribution et diminuer le stock/besoin


    services:
        Validator.php:
            -function validateLogin() pour valider la connexion
            -function validateDon() pour valider les dons
            -function validateBesoin() pour valider les besoins
            -function validateAchat() pour valider les achats
            -function validateDistribution() pour valider les distributions

    repositories:
        UserRepository.php:
            -function insertOrFindByEmail() pour inserer ou trouver un utilisateur par email

        DashboardRepository.php:
            -function obtenirDonneesTableauDeBord() pour les données globales
            -function obterBesoinsParVilleId($id) pour les besoins d'une ville active
            -function obtenirDonneesRecapitulatif() pour les stats SQL
            -function obtenirVillesAvecStatistiques() pour les villes et total achats
            -function obtenirDistributionsParVilleId($id) pour l'historique (Achats + Distributions) d'une ville

        BesoinRepository.php:
            -function insererBesoin() pour insérer des besoins normalisés
            -function getAllBesoinVille() pour lister les besoins non comblés
            -function getBesoinById($id) pour les détails d'un besoin
            -function diminuerQuantiteBesoin($id_besoin, $quantite) pour réduire le besoin automatiquement

        DonRepository.php:
            -function insererDon() pour insérer des dons

        AchatsRepository.php:
            -function getPrixUnitaireByType($typeId) pour récupérer le dernier prix
            -function insertAchat($id_besoin, $quantite_achetee) pour insérer l'achat et calculer le montant

        DistributionRepository.php:
            -function findBesoin($besoin_nom, $id_ville) pour trouver un besoin spécifique (normalisé)
            -function insertDistribution($id_besoin, $quantite) pour insérer la distribution

        StockageRepository.php:
            -function getStockByDetails() pour trouver un stock existant
            -function ajouterStock() pour augmenter le stock
            -function retirerStock() pour diminuer le stock
            -function getStockDetails() pour lister l'état du stock par ville

        
    views:
        login.php:
            -formulaire de connexion
            -bouton de connexion traitement vers /login
        dashboard.php:
            -affichage des données du tableau de bord
        villes.php:
            -liste des villes avec bouton de détail
        villeById.php:
            -affichage des besoins et de l'historique complet (achats/distributions)
        achats.php:
            -liste des achats et formulaire d'ajout
        insererBesoin.php:
            -formulaire pour insérer des besoin
        insererDon.php:
            -formulaire pour insérer des dons (général)
        insererDistribution.php:
            -formulaire pour distribuer le stock aux villes
        header.php:
            -navigation avec mise en évidence de la page active (classe active)
        footer.php:
            -pied de page standard
